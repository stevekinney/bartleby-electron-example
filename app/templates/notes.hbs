<div class="note-list">
  <div class="new-note">
    <form {{action 'createNote' on="submit"}}>
    {{input type="text"
            placeholder="New Note Title"
            value=newNoteTitle
            submit="createNote"
            class="new-note-title"}}
    </form>
  </div>

  {{#each model as |note|}}
    {{#link-to 'notes.note' note class="note-list-item"}}
      {{note.id}}
    {{/link-to}}
  {{/each}}
</div>

{{outlet}}
